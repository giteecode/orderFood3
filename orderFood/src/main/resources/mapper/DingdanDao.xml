<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.DingdanDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.DingdanEntity" id="dingdanMap">
        <result property="mingcheng" column="mingcheng"/>
        <result property="leixing" column="leixing"/>
        <result property="tupian" column="tupian"/>
        <result property="jiage" column="jiage"/>
        <result property="goumaishuliang" column="goumaishuliang"/>
        <result property="zongjiage" column="zongjiage"/>
        <result property="shangjiabianhao" column="shangjiabianhao"/>
        <result property="shangjiamingcheng" column="shangjiamingcheng"/>
        <result property="zhanghao" column="zhanghao"/>
        <result property="shouji" column="shouji"/>
        <result property="qishoushouyi" column="qishoushouyi"/>
        <result property="xiadanshijian" column="xiadanshijian"/>
        <result property="beizhu" column="beizhu"/>
        <result property="sfsh" column="sfsh"/>
        <result property="shhf" column="shhf"/>
        <result property="ispay" column="ispay"/>
        <result property="longitude" column="longitude"/>
        <result property="latitude" column="latitude"/>
        <result property="fulladdress" column="fulladdress"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.DingdanVO" >
		SELECT * FROM dingdan  dingdan
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>

	<select id="selectVO"
		resultType="com.entity.vo.DingdanVO" >
		SELECT  dingdan.* FROM dingdan  dingdan
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.DingdanView" >

		SELECT  dingdan.* FROM dingdan  dingdan
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>

	<select id="selectView"
		resultType="com.entity.view.DingdanView" >
		SELECT * FROM dingdan  dingdan <where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="qryCount"
            resultType="com.entity.vo.StatisticsVO" >
        SELECT ispay as label,count(*) as count FROM dingdan group by ispay
    </select>

    <select id="qrySaleCount" resultType="com.entity.vo.StatisticsVO" >
        SELECT
            DATE_FORMAT(xiadanshijian, '%Y-%m') AS label,  -- 提取年月
            SUM(zongjiage) AS count                       -- 汇总销售额
        FROM
            dingdan
        WHERE
        -- MySQL 中用 STR_TO_DATE 转换字符串为日期
            xiadanshijian BETWEEN STR_TO_DATE(#{start}, '%Y-%m-%d %H:%i:%s')
          AND STR_TO_DATE(#{end}, '%Y-%m-%d %H:%i:%s')
        GROUP BY
            DATE_FORMAT(xiadanshijian, '%Y-%m')  -- 显式使用原始表达式（兼容所有版本）
        ORDER BY
            label ASC;  -- 按年月升序  -- 按年月排序
    </select>
</mapper>
